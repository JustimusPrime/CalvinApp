<h1>Make a new blog for Calvin</h1>

<%= form_for(@blog_post) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :title, class: 'form-control', placeholder: 'Body' %>
  </div>
<% end %>