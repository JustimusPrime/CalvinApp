<h1>I am the Gig page</h1>

<div class="container">

  <%= link_to "Create New Item", new_gig_url, class: 'btn btn-primary' %>
  <br>
  <br>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          Date
        </th>
        <th>
          Time
        </th>      
        <th>
          Show
        </th>
        <th>
          Location
        </th>
        <th>
          Link
        </th>    
      </tr>
    </thead>
    <tbody>
    <% @gigs.each do |gig| %>
      <tr>
        <td><%= gig.date %></td>
        <td><%= gig.time %></td>
        <td><%= gig.show_name %></td>
        <td><%= gig.location %></td>
        <td><%= gig.link %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>