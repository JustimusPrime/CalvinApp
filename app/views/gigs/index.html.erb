<h1>I am the Gig page</h1>

<div class="container">

  <%= link_to "Create New Item", new_gig_url, class: 'btn btn-primary' %>
  <br>
  <br>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          Date
        </th>
        <th>
          Time
        </th>      
        <th>
          Show
        </th>
        <th>
          Location
        </th>
        <th>
          Link
        </th>    
      </tr>
    </thead>
    <tbody>
    <% @gigs.each do |gig| %>
      <tr>
        <td><%= gig.date %></td>
        <td><%= gig.time %></td>
        <td><%= gig.show_name %></td>
        <td><%= gig.location %></td>
        <td><%= gig.link %></td>
        <td><%= link_to 'Edit', edit_gig_path(gig) %></td>
        <td><%= link_to 'Delete', gig, method: :delete, data: { confirm: 'Are you sure you want to delete this show? Like is it UG or is it important?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>